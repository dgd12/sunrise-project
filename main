#include<stdio.h>
#include<Windows.h>
int Choose(int choose)
{
	char a;
	int count=0;

	switch(choose)
	{
	case 1:
		system("cls");
		printf("                   스페이스바를 클릭을하여 돈을 벌어주세요 \n");
		
	    for(a=0;a<=2000000000; a++)
		{
			scanf("%c", &a);
			{
			if(a==32)
				count++;
		}
			printf("%d",count-1);
				
			
		}
			
			
			
		break;
	case 2:
		system("cls");
		printf("f231");
		break;
	case 3:
		system("cls");
		printf("124");
		break;
	default:
		system("cls");
		printf("\n\n\n\n\n\n\n\n\n                         │     Space    │ Clicker\n");
	    printf("\n\n\n                                  1. 시작하기\n");
	    printf("                                  2. 설명보기\n");
		printf("                                  3. 끝내기\n  다시 입력해주세요.");
		scanf("%d", &choose);
		Choose(choose);
		

	}
	return choose;
	
}
int main(void)
{
	int choose;
	printf("\n\n\n\n\n\n\n\n\n                         │     Space    │ Clicker\n");
	printf("\n\n\n                                  1. 시작하기\n");
	printf("                                  2. 설명보기\n");
	printf("                                  3. 끝내기\n");

	scanf("%d", &choose);
	Choose(choose);

	
	
	return 0;
}
		
		
	
